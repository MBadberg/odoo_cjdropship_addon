<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Product Import Wizard Form View -->
    <record id="view_product_import_wizard_form" model="ir.ui.view">
        <field name="name">cjdropship.product.import.wizard.form</field>
        <field name="model">cjdropship.product.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Products from CJDropshipping">
                <group invisible="state != 'draft'">
                    <group>
                        <field name="config_id"/>
                        <field name="category_id"/>
                    </group>
                    <group>
                        <field name="page_number"/>
                        <field name="page_size"/>
                        <field name="create_odoo_products"/>
                    </group>
                </group>
                <group invisible="state != 'done'">
                    <group>
                        <label for="imported_count" string="Products Imported"/>
                        <div>
                            <field name="imported_count" class="oe_inline"/>
                            <span class="oe_inline"> products</span>
                        </div>
                    </group>
                </group>
                <group invisible="not error_message">
                    <field name="error_message" readonly="1"/>
                </group>
                <field name="state" invisible="1"/>
                <footer>
                    <button string="Import Products" name="action_import_products" type="object" 
                        class="btn-primary" invisible="state != 'draft'"/>
                    <button string="View Imported Products" name="action_view_imported_products" 
                        type="object" class="btn-primary" invisible="state != 'done'"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Product Import Wizard Action -->
    <record id="action_product_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Products</field>
        <field name="res_model">cjdropship.product.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_cjdropship_config"/>
        <field name="binding_view_types">form</field>
    </record>

</odoo>
