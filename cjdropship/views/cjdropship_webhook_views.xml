<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Webhook Form View -->
    <record id="view_cjdropship_webhook_form" model="ir.ui.view">
        <field name="name">cjdropship.webhook.form</field>
        <field name="model">cjdropship.webhook</field>
        <field name="arch" type="xml">
            <form string="CJDropshipping Webhook">
                <sheet>
                    <group>
                        <field name="webhook_type"/>
                        <field name="event"/>
                        <field name="cj_order_id"/>
                        <field name="processed"/>
                        <field name="create_date"/>
                        <field name="process_date"/>
                    </group>
                    <group string="Data">
                        <field name="payload"/>
                        <field name="headers"/>
                        <field name="error_message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Webhook List View -->
    <record id="view_cjdropship_webhook_list" model="ir.ui.view">
        <field name="name">cjdropship.webhook.list</field>
        <field name="model">cjdropship.webhook</field>
        <field name="arch" type="xml">
            <list string="CJDropshipping Webhooks">
                <field name="webhook_type"/>
                <field name="event"/>
                <field name="cj_order_id"/>
                <field name="processed"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Webhook Action -->
    <record id="action_cjdropship_webhook" model="ir.actions.act_window">
        <field name="name">CJDropshipping Webhooks</field>
        <field name="res_model">cjdropship.webhook</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No webhooks received yet
            </p>
        </field>
    </record>

</odoo>
