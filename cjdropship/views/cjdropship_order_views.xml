<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Order Form View -->
    <record id="view_cjdropship_order_form" model="ir.ui.view">
        <field name="name">cjdropship.order.form</field>
        <field name="model">cjdropship.order</field>
        <field name="arch" type="xml">
            <form string="CJDropshipping Order">
                <header>
                    <button name="action_submit_to_cj" string="Submit to CJ" type="object" 
                        class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_update_status" string="Update Status" type="object"
                        invisible="not cj_order_id or state in ['draft', 'error', 'cancelled']"/>
                    <button name="action_query_logistics" string="Query Logistics" type="object"
                        invisible="state not in ['shipped', 'delivered']"/>
                    <field name="state" widget="statusbar" 
                        statusbar_visible="draft,submitted,processing,shipped,delivered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="cj_order_id" string="CJ Order ID"/>
                        <h1>
                            <field name="cj_order_id" placeholder="Will be assigned after submission"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Order Information">
                            <field name="sale_order_id"/>
                            <field name="cj_order_num"/>
                            <field name="order_date"/>
                            <field name="config_id"/>
                        </group>
                        <group string="Shipping">
                            <field name="shipping_method"/>
                            <field name="shipping_cost"/>
                            <field name="tracking_number"/>
                            <field name="last_logistics_update"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                        <page string="Error Message" name="error" invisible="state != 'error'">
                            <field name="error_message" readonly="1"/>
                        </page>
                        <page string="Logistics Info" name="logistics" invisible="not logistics_info">
                            <field name="logistics_info" widget="text"/>
                        </page>
                        <page string="Request Data" name="request" invisible="not request_data">
                            <field name="request_data" widget="text"/>
                        </page>
                        <page string="Response Data" name="response" invisible="not response_data">
                            <field name="response_data" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Order Tree View -->
    <record id="view_cjdropship_order_tree" model="ir.ui.view">
        <field name="name">cjdropship.order.tree</field>
        <field name="model">cjdropship.order</field>
        <field name="arch" type="xml">
            <list string="CJDropshipping Orders" decoration-info="state == 'draft'" 
                decoration-success="state == 'delivered'" decoration-danger="state == 'error'">
                <field name="cj_order_id"/>
                <field name="cj_order_num"/>
                <field name="sale_order_id"/>
                <field name="order_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Order Search View -->
    <record id="view_cjdropship_order_search" model="ir.ui.view">
        <field name="name">cjdropship.order.search</field>
        <field name="model">cjdropship.order</field>
        <field name="arch" type="xml">
            <search string="Search CJDropshipping Orders">
                <field name="cj_order_id"/>
                <field name="cj_order_num"/>
                <field name="sale_order_id"/>
                <field name="order_date"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Delivered" name="delivered" domain="[('state','=','delivered')]"/>
                <filter string="Error" name="error" domain="[('state','=','error')]"/>
            </search>
        </field>
    </record>
</odoo>
